{% extends 'partials/snipcart_base.html.twig' %}

{% block content %}

    {{ parent() }}
<div class="posts">
                <h1 class="content-subhead">{{ page.header.title }}</h1>
<section class="post">
  <header class="post-header">
    <h2 class="post-title">{{ page.header.title }}</h2> 
  </header>
  {{ content }}
  <div class="l-content">
    <div class="pricing-tables pure-g">
        {% for child in page.collection() %}
            {% if (child.header.unpublished is not defined or (child.header.unpublished == false)) %}
                {% include 'partials/snipcart_category_item.html.twig' with {'page': child, 'parent': page} %}
            {% endif %}
        {% endfor %}
    </div>
</div>
</section>
</div>

{% endblock %}
